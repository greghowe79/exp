{
  "routes": [
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "*",
      "methods": ["POST", "PUT", "DELETE"],
      "rewrite": "/api/render"
    },
    {
      "route": "/",
      "rewrite": "/api/render"
    },
    {
      "route": "/index.html",
      "rewrite": "/api/render"
    }
  ],
  "navigationFallback": {
    "rewrite": "/api/render",
    "exclude": ["/api/*"]
  },
  "platform": {
    "apiRuntime": "node:18"
  }
}
